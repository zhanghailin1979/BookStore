<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="learning.moliying.com.bookstore.ui.OrdersActivity">
<include layout="@layout/titlebar_orders"
    android:id="@+id/include3" />
    <ListView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/listView_orders"
        android:layout_below="@+id/include3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/listView_orders"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:padding="5dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/textView8_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="共0件商品"
                android:paddingBottom="5dp"
                android:textColor="@color/gray_more"
                />
            <TextView
                android:id="@+id/textView8_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="金额:0.00元"
                android:textSize="16sp"
                android:textColor="@color/red"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_Settlement8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/red_button_bg"
            android:text="去结算"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
