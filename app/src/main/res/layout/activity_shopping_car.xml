<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="learning.moliying.com.bookstore.ui.ShoppingCarActivity">
<include layout="@layout/titlebar_shopping_car" />
    <ListView
        android:id="@+id/listView2_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:choiceMode="none"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:padding="5dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/textView5_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="共0件商品"
                android:paddingBottom="5dp"
                android:textColor="@color/gray_more"
                />
            <TextView
                android:id="@+id/textView4_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="金额:0.00元"
                android:textSize="16sp"
                android:textColor="@color/red"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_Settlement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/red_button_bg"
            android:text="去结算"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
