<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageView_book2"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="书名书名书名书名书名书名书名书名书名书名书名"
        android:lines="2"
        android:ellipsize="start"
        android:padding="5dp"
        android:id="@+id/textView6_bookName"
        android:layout_toEndOf="@+id/imageView_book2"/>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:id="@+id/button_delete"
        android:src="@drawable/btn_delete_bg"
        android:layout_alignBottom="@+id/imageView_book2"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小计"
        android:lines="1"
        android:textColor="@color/red2"
        android:textSize="14sp"
        android:padding="5dp"
        android:id="@+id/textView7_subtotal"
        android:layout_alignBottom="@+id/button_delete"
        android:layout_toEndOf="@+id/imageView_book2" />

</RelativeLayout>